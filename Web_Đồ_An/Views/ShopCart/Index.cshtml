
@model IEnumerable<Web_Đồ_An.Models.ShopCart>

@{
    ViewData["Title"] = "Gio hang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Giỏ hàng của bạn</h2>
                        <ul>
                            <li>
                                <a href="/">Trang chủ<i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Sản phẩm</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="cart-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form action="javascript:void(0)">
                        <div class="">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th class="product-thumbnail">Hình ảnh</th>
                                        <th class="cart-product-name">Tên Sản Phẩm</th>
                                        <th class="product-price">Giá Tiền</th>
                                        <th class="product-quantity">Số lượng</th>
                                        <th class="product-subtotal">Tổng tiền</th>
                                        <th class="product_remove"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        var i = 1;
                                        @foreach (var item in Model)
                                        {
                                            var money = item.PriceSale * item.Quantity;
                                            <tr>
                                                <td>@(i)</td>
                                                <td class="product-thumbnail">
                                                    <a href="javascript:void(0)">
                                                        <img src="@item.Image" alt="@item.Title">
                                                    </a>
                                                </td>
                                                <td class="product-name"><a href="">@item.Title</a></td>
                                                <td class="product-price">
                                                    <span data-price="@item.PriceSale" class="new-price">
                                                        @Web_Đồ_An.Common.Common.FormatNumber(item.PriceSale, 0)VND
                                                    </span> <br />
                                                    <span class="old-price text-primary">
                                                        @Web_Đồ_An.Common.Common.FormatNumber(item.Price, 0)VND
                                                    </span>
                                                </td>
                                                <td class="quantity">
                                                    <div class="cart-plus-minus">
                                                        <div class="dec qtybutton"><i class="fa fa-minus"></i></div>
                                                        <input class="cart-plus-minus-box" value="@item.Quantity" type="text">
                                                        <div class="inc qtybutton"><i class="fa fa-plus"></i></div>
                                                    </div>
                                                </td>
                                                <td class="product-subtotal">
                                                    <p data-money="@money" class="total-money">
                                                        <span id="money">@string.Format("{0:#,##0}", @money)</span>VND
                                                    </p>
                                                </td>
                                                <td class="product_remove btn-action">
                                                    <a href="/shopcart/remove/?id=@item.ProductId" data-id="@item.ProductId" class="btn btn-primary btn-secondary-hover remove">Xóa</a>
                                                    <a href="#" data-id="@item.ProductId" class="btn btn-primary btn-secondary-hover update">Cập nhật</a>
                                                    
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6">Không có sản phẩm nào</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="coupon-all">
                                    <div class="coupon2">
                                        <input asp-controller="Products" asp-action="Index" class="button" name="Tiếp tục mua hàng" value="Update cart" type="submit">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-5 ml-auto">
                                <div class="cart-page-total">
                                    <h2>Tổng số đơn hàng</h2>
                                    <ul>
                                        <li>Số lượng sản phẩm <span>@ViewBag.Count</span></li>
                                        <li>Tổng tiền <span id="totalMoney">@string.Format("{0:#,##0}", ViewBag.Total)
                                            <sup style="font-size: 25px; top: 0rem;}">₫</sup></span></li>
                                    </ul>
                                    <a href="javascript:void(0)">Proceed to checkout</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    td.quantity {
        display: flex;
        justify-content: center;
        border: none;
    }

    tr {
        /*  font-size: 1.25rem; */
        text-align: center;
        /* margin: 5rem !important; */
    }

    img {
        max-width: 60% !important;
    }
</style>

